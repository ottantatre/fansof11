{
  "name": "fansof11",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "type": "module",
  "homepage": "https://github.com/ottantatre/fansof11#readme",
  "bugs": {
    "url": "https://github.com/ottantatre/fansof11/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ottantatre/fansof11.git"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -ws build",
    "dev": "npm run -ws dev",
    "lint": "npm run -ws lint",
    "format": "prettier -w .",
    "typecheck": "npm run -ws typecheck",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts"
  },
  "engines": {
    "node": ">=20.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,css}": "prettier -w"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
